---
import FacebooIcon from '@/assets/icons/FacebookIcon.astro';
import InstagramIcon from '@/assets/icons/InstagramIcon.astro';
import TikTokIcon from '@/assets/icons/TikTokIcon.astro';
import WhatsappIcon from '@/assets/icons/WhatsappIcon.astro';
---

<main
  class="relative w-full h-[100dvh] bg-cover bg-center bg-no-repeat px-4"
  style="background-image: url('/images/daniel_training.webp');"
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/80"></div>

  <div class="relative z-10 flex items-center justify-center h-full flex-col max-w-96 mx-auto">
    <img
      src="images/daniel_running.webp"
      alt="Foto perfil Daniel Kelly"
      class="w-28 h-28 rounded-full mb-6 object-cover border-2 border-white shadow-lg"
    />
    <h1 class="text-white text-4xl font-bold">Daniel Kelly Fit</h1>
    <h2 class="text-white opacity-80">Entrenador personal & creador de contenido</h2>

    <section class="mt-4 flex gap-6 justify-center">
      <!-- Facebook -->
      <a
        href="https://www.facebook.com/profile.php?id=100087054653965"
        target="_blank"
        class="w-12 h-12 rounded-full bg-[#1877F2] flex items-center justify-center shadow-sm shadow-white/45"
      >
        <FacebooIcon color="white" />
      </a>

      <!-- Instagram -->
      <a
        href="https://www.instagram.com/danielkelly_fit/"
        target="_blank"
        class="w-12 h-12 rounded-full bg-gradient-to-tr from-yellow-500 via-pink-500 to-purple-600 flex items-center justify-center shadow-sm shadow-white/45"
      >
        <InstagramIcon color="white" />
      </a>

      <!-- TikTok -->
      <a
        href="https://www.tiktok.com/@danielkellys?lang=es-419"
        target="_blank"
        class="w-12 h-12 rounded-full bg-black flex items-center justify-center shadow-sm shadow-white/45"
      >
        <TikTokIcon color="white" />
      </a>
    </section>
    <section class="mt-6 flex flex-col gap-3 justify-center w-full">
      <a
        href="https://www.instagram.com/dekaa.fit/"
        target="_blank"
        class="w-full p-3 rounded-full bg-white flex items-center justify-center shadow-sm shadow-white/45 gap-2 text-black"
      >
        <InstagramIcon color="black" />
        <span class="text-base font-semibold">Mi tienda (Dekaa.fit)</span>
      </a>
      <a
        href="https://www.instagram.com/teamdanielkelly/"
        target="_blank"
        class="w-full p-3 rounded-full bg-white flex items-center justify-center shadow-sm shadow-white/45 gap-2 text-black"
      >
        <InstagramIcon color="black" />
        <span class="text-base font-semibold">Team Daniel Kelly</span>
      </a>
      <a
        href="https://wa.me/573022071208"
        target="_blank"
        class="w-full p-3 bg-[#25D366] text-white rounded-full flex items-center justify-center gap-2"
      >
        <WhatsappIcon color="white" />
        <span class="text-white text-base font-semibold">Contáctame</span>
      </a>
    </section>
    <footer class="mt-12 flex flex-col items-center gap-2">
      <img src="images/logo.webp" class="w-28" alt="Logo Daniel Kelly Fit" />
      <p class="text-white text-sm opacity-70">
        © Daniel Kelly Fit. Todos los derechos reservados.
      </p>
    </footer>
  </div>
</main>
