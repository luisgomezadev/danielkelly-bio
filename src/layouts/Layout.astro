---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/dk_logo_transparent.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="keywords"
      content="Daniel Kelly, Personal Trainer, Entrenador Personal, Entrenamiento, Asesoria"
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://danielkelly-bio.vercel.app/" />
    <meta property="og:title" content="Daniel Kelly | Entrenador Personal" />
    <meta property="og:site_name" content="Daniel Kelly | Entrenador Personal" />
    <meta
      property="og:description"
      content="Bienvenidos a mi pagina web personal. Soy Daniel Kelly, entrenador personal especializado en transformación física, hábitos saludables y bienestar integral."
    />
    <meta
      property="twitter:image"
      content="https://raw.githubusercontent.com/LuisGomez11/danielkellyfit-page/main/public/images/portada.webp"
    />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://danielkelly-bio.vercel.app/" />
    <meta property="twitter:title" content="Daniel Kelly | Entrenador Personal" />
    <meta
      property="twitter:description"
      content="Bienvenidos a mi pagina web personal. Soy Daniel Kelly, entrenador personal especializado en transformación física, hábitos saludables y bienestar integral."
    />
    <meta
      property="twitter:image"
      content="https://raw.githubusercontent.com/LuisGomez11/danielkellyfit-page/main/public/images/portada.webp"
    />
  </head>
  <body class="bg-gradient-to-r from-black to-green-950">
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html,
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }
</style>
